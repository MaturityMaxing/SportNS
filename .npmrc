# Enable strict peer dependencies
strict-peer-dependencies=false

# Use pnpm's node-linker (default, but explicit for clarity)
node-linker=isolated

# Hoist patterns for React Native / Expo compatibility
# This ensures native modules can be properly resolved
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=@react-native*
public-hoist-pattern[]=@react-navigation*

# Shamefully hoist (if needed for Metro bundler compatibility)
# shamefully-hoist=true

